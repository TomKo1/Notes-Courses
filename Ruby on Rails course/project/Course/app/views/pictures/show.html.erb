<div class="hero-unit">
<h1>Show Pictures</h1>
<%= link_to("Return", {:action => 'index', :gallery_id =>  @galleryOne.id}) %>
<table class="table table-striped">
    <tr>
        <th>Gallery Name</th>
        <th><%= @pictures.gallery.name %></th>
    </tr>
    <tr>
        <th>Name</th>
        <th><%= @pictures.name %></th>
    </tr>
    <tr>
        <th>Position</th>
        <th><%= @pictures.position %></th>
    </tr>
    <% if !@pictures.picture.blank? %>
        <tr>
            <th>Image</th>
            <td><%= image_tag(@pictures.picture) %></td>
        </tr>
    <% end %>
    <tr>
        <th>Description:</th>
        <td><%= @pictures.description %></td>
    </tr>
    <tr>
        <th>Visible</th>
        <th><%= @pictures.visible ? 'Yes': 'No' %></th>
    </tr>
    <tr>
        <th>Created</th>
        <th><%= @pictures.created_at %></th>
    </tr>
    <tr>
        <th>Updated</th>
        <th><%= @pictures.updated_at %></th>
    </tr>
</table>
<div style="text-align: center;">
    <%= link_to("Return", {:action => 'index', :gallery_id =>  @galleryOne.id}, :class => 'btn btn-primary')%>
</div>

</div>











