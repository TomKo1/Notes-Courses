<div class="form-group">
    <%= form_tag(:action => 'loginUser') do %>
    <table class="table table-striped">
        <tr>
            <td><%= label_tag(:user, 'User: ') %></td>
            <td><%= text_field_tag(:user) %></td>
        </tr>
        <tr>
            <td><%= label_tag(:password, 'Password: ') %></td>
            <td><%= password_field_tag(:password) %></td>
        </tr>
        <tr>
            <th>&nbsp</th>
            <td><%= submit_tag('Log in', :class=> 'btn btn-primary') %></td>
        </tr>
    </table>
    <% end %>
</div>


