<div class="hero-unit">
    <h1>Galleries</h1>
    <%= link_to("Add new gallery", {:action => 'new'}, :class => 'btn btn-mini btn-primary') %>

    <p style="text-align: right;">Number of galleries:<%= @gallery.size %></p>

<table class="table table-striped">
    <tr class="info">
    <th>Name</th>
    <th>Position</th>
    <th>Visible</th>
    <th>Action</th>
</tr>

<% @gallery.each do |singleGallery|  %>
<tr>
    <td><%= singleGallery.name %></td>
    <td><%= singleGallery.position %></td>
    <td class="center"><%= con_visibility_helper(singleGallery.visible,{} ) %></td>
    <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => singleGallery.id}, :class => 'btn btn-xs btn-default') %>

        <%= link_to("Edit", {:action => 'edit', :id => singleGallery.id}, :class => 'btn btn-xs btn-primary') %>
        <%= link_to("Delete", {:action => 'delete', :id => singleGallery.id}, :class => 'btn btn-xs btn-danger') %>
    </td>
</tr>
<% end %>

</table>
</div>









