<%= error(@user) %>

<table class="table table-striped">
    <tr>
        <th><%= field.label(:name) %></th>
<th><%= field.text_field(:name, :class => 'form-control') %></th>
    </tr>
    <tr>
        <th><%= field.label(:surname) %></th>
        <th><%= field.text_field(:surname, :class => 'form-control') %></th>
    </tr>
    <tr>
        <th><%= field.label(:user) %></th>
        <th><%= field.text_field(:user, :class => 'form-control') %></th>
    </tr>
    <tr>
        <th><%= field.label(:email) %></th>
        <th><%= field.text_field(:email, :class => 'form-control') %></th>
    </tr>
    <tr>
        <th><%= field.label(:password) %></th>
        <th><%= field.password_field(:password, :class => 'form-control') %></th>
    </tr>
    <tr>
        <th><%= field.label(:password_confirmation) %></th>
        <th><%= field.password_field(:password_confirmation, :class => 'form-control') %></th>
    </tr>
</table>

