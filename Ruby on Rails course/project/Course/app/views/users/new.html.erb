<div class="hero-unit">
<h1>New User</h1>

<%= form_for(:user, :url => {:action => 'create'} ) do |field| %>

<%= render(:partial => "form", :locals => {:field => field}) %>

<div style="text-align: center">
    <%= link_to("Return", {:action => 'index'}, :class => 'btn btn-warning') %>
    <%= submit_tag("Create", :class => 'btn btn-primary') %>
</div>

<% end %>
</div>


