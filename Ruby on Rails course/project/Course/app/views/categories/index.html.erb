<div class="hero-unit">
<h1>Categories</h1>
<%= link_to("Add new category", {:action => 'new'}, :class => 'btn btn-mini btn-primary') %>
<p>Number of categories: <%= @categories.size %></p>

<table class="table table-striped"> 
	<tr class="info">
		<th>Position</th>
		<th>Name</th>
		<th>Visible</th>
		<th>Pages</th>
		<th>Action</th>
	</tr>
	
<% @categories.each do |category|  %>
	<tr>
		<td><%= category.position %></td>
		<td><%= category.name %></td>
		<td class="center"><%= con_visibility_helper(category.visible,{} ) %></td>
		<td class="center"> <%= category.pages.size %></td>
		<td class="actions">
            <%= link_to("Pages", {:controller => 'pages', :category_id => category.id}, :class => 'btn btn-xs btn-success') %>
			<%= link_to("Show", {:action => 'show', :id => category.id}, :class => 'btn btn-xs btn-default') %>
            <%= link_to("Edit", {:action => 'edit', :id => category.id}, :class => 'btn btn-xs btn-primary') %>
            <%= link_to("Delete", {:action => 'delete', :id => category.id}, :class => 'btn btn-xs btn-danger') %>
		</td>
	</tr>

<% end %>
	
</table>
</div>

