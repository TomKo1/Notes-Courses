<div class="hero-unit">
<h1>Articles</h1>
<%= link_to("Add new article", {:action => 'new'}, :class => 'btn btn-mini btn-primary') %>

<p style="text-align: right;">Number of articles:<%= @articles.size %></p>

<table class="table table-striped">
    <tr class="info">
        <th>Position</th>
        <th>Page</th>
        <th>Name of article</th>
        <th>Visible</th>
        <th>Action</th>
    </tr>

<% @articles.each do |article|  %>
    <tr>
        <td><%= article.position %></td>
        <td><%= article.page.name %></td>
        <td><%= article.name %></td>
        <td class="center"><%= con_visibility_helper(article.visible,{} ) %></td>
        <td class="actions">
            <%= link_to("Show", {:action => 'show', :id => article.id}, :class => 'btn btn-xs btn-default') %>

            <%= link_to("Edit", {:action => 'edit', :id => article.id}, :class => 'btn btn-xs btn-primary') %>
            <%= link_to("Delete", {:action => 'delete', :id => article.id}, :class => 'btn btn-xs btn-danger') %>
        </td>
    </tr>
<% end %>

</table>
</div>









