<div class="hero-unit">
<h1>Show Article</h1>
    <%= link_to("Return", {:action => 'index'}) %>
    <table class="table table-striped">
    <tr>
        <th>Page</th>
        <th><%= @articles.page.name %></th>
    </tr>
    <tr>
    <th>Name</th>
    <th><%= @articles.name %></th>
    </tr>
    <tr>
        <th>Position</th>
        <th><%= @articles.position %></th>
    </tr>
    <tr>
        <th>Image</th>
        <td><%= image_tag(@articles.pictures) %></td>
    </tr>
    <tr>
        <th>Content:</th>
        <td><%= @articles.content %></td>
    </tr>
    <tr>
        <th>Visible</th>
        <th><%= @articles.visible ? 'Yes': 'No' %></th>
    </tr>
    <tr>
        <th>Created</th>
        <th><%= @articles.created_at %></th>
    </tr>
    <tr>
        <th>Updated</th>
        <th><%= @articles.updated_at %></th>
    </tr>
    </table>
    <div style="text-align: center;">
    <%= link_to("Return", {:action => 'index', :page_id => @pages.id}, :class => 'btn btn-primary')%>
</div>

</div>










